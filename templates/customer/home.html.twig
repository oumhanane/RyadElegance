{% extends 'base.html.twig' %}

{% block title %}
	Accueil
{% endblock %}

{% block body %}

	<div id="carouselExampleIndicators" class="carousel slide">
  <div class="carousel-indicators">
    <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
    <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="1" aria-label="Slide 2"></button>
    <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="2" aria-label="Slide 3"></button>
  </div>
  <div class="carousel-inner">
    <div class="carousel-item active">
      <img src="https://i.pinimg.com/originals/4a/e2/69/4ae2693120ef6caf3ff6b80d1a19cae6.jpg" class="d-block w-100 imageCarousel" alt="image ryad">
    </div>
    <div class="carousel-item">
      <img src="https://i.pinimg.com/originals/63/45/c9/6345c969e347017ee63826a532520a7b.jpg" class="d-block w-100 imageCarousel" alt="image ryad">
    </div>
    <div class="carousel-item">
      <img src="https://images.squarespace-cdn.com/content/v1/5a3d385d7131a55477a22dca/1516434719867-4LJMUOHNHQ3L03HJTNKD/Dar+Roumana+1064.jpg" class="d-block w-100 imageCarousel" alt="image ryad">
    </div>
  </div>
  <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="visually-hidden">Previous</span>
  </button>
  <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="visually-hidden">Next</span>
  </button>
</div>


	<div class="container py-5">
		<div class="row">
			<div class="col-12">
				<h3 class="text-center">Les catégories</h3>
			</div>
			
			{% for category in categories %}
				<div class="col-sm-12 col-md-6 col-lg-4 mt-3">
					<div class="card">
						<img src="{{ category.image }}" class="card-img-top imageCard" alt="image_category">
						<div class="card-body">
							<h5 class="card-title">{{ category.name | upper }}</h5>
							<a href="#" class="btn btn-secondary w-100">Consulter</a>
						</div>
					</div>
				</div>
			{% endfor %}

		</div>

		<div class="row">
			<div class="col-12 mt-5">
				<h3 class="text-center">Les nouveautés</h3>
			</div>
			
			{% for product in products %}
				<div class="col-sm-12 col-md-6 col-lg-4 mt-3">
					<div class="card">
						<img src="{{ product.image }}" class="card-img-top imageCard" alt="image_produit">
						<div class="card-body">
							<h5 class="card-title">{{ product.name | upper }}</h5>
							<p>{{ product.price | priceEuro }}</p>
							<a href="#" class="btn btn-secondary w-100">Consulter</a>
						</div>
					</div>
				</div>
			{% endfor %}

		</div>
	</div>

{% endblock %}
